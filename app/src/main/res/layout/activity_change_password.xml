<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">

    <TextView
        android:id="@+id/password_label"
        android:layout_width="223dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="116dp"
        android:text="@string/change_password_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/change_password_label" />

    <Button
        android:id="@+id/save_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="16dp"
        android:onClick="changePassword"
        android:text="@string/button_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toEndOf="@+id/password"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/button_save" />

    <EditText
        android:id="@+id/password"
        android:layout_width="227dp"
        android:layout_height="51dp"
        android:layout_marginStart="52dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        app:layout_constraintBaseline_toBaselineOf="@+id/save_password"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/create_password" />

</androidx.constraintlayout.widget.ConstraintLayout>